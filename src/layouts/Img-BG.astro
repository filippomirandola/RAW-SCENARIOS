    filter: brightness(110%) contrast(1000%);
    opacity: 30%;
    transition: filter var(--transition-duration, 0.1s) ease-out, transform 0.3s ease-in-out;
    position: absolute;
    top: var(--top);
    left: var(--left);
    width: var(--width);
    height: auto;
    pointer-events: none;
  }
  img, a, h1 {
    position: relative;
    z-index: 1;
  }
  
