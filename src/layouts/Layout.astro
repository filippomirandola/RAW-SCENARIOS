---
interface Props {
  title: string;
  language: string;
}

const { title, language } = Astro.props;
---

<!doctype html>
<html lang={language} class="antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/rawscenarios/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/mqi7xvb.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  <!-- Google tag (gtag.js) -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-NQ54V0PTYZ"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-NQ54V0PTYZ');
  </script>

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>


  <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script is:inline>
    AOS.init();
    
  </script>

</html>

